<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:FontExplorer.Views"
        xmlns:vm="using:FontExplorer.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FontExplorer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="MainWindow">
  <Grid ColumnDefinitions="200, *">
    <ListBox Name="FontList" Grid.Column="0" ItemsSource="{Binding Fonts}" SelectedItem="{Binding SelectedFontFamily, Mode=TwoWay}" />
    <ContentControl Grid.Column="1" Content="{Binding Inspector}" />
  </Grid>
</Window>
